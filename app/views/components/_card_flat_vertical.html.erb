<%# https://getbootstrap.com/docs/5.3/components/card/ %>

<%#= link_to flat_path(flat) do %>
  <div class="card shadow bg-white" style="border_radius: $border-radius">
    <% if flat.photos[0].nil? %>
      <img class="card-img-top" src="https://raw.githubusercontent.com/Arth-M/air_cnc/master/public/logo.png" alt="Flat image">
    <% else %>
      <img class="card-img-top" src="<%= flat.photos.first.url %>" alt="Flat image">
    <% end %>
    <div class="card-body p-3">
      <h3 id='another-gradient' class="card-title"><%= flat.name %></h3>
      <p class="font-italic"><%= flat.city %></p>
        <% if flat.description.length > 67 %>
          <p class="card-text" ><%= flat.description[0,64] %>...</p>
        <% else %>
          <p class="card-text" ><%= flat.description %></p>
        <% end %>
    </div>
      <h6 class="text-end px-3"><%= flat.price %> <strong>â‚¬</strong></h6>
      <%= link_to 'Show', flat_path(flat), class: "btn btn-flat btn-block" %>
  </div>
<%# end %>
