<div class="container">
  <div class="inner-container shadow p-3">
  <div class="row bg-white p-3">
    <div class="col">
      <h2><%= @flat.name %></h2>
      <div class="flat-img">
        <%= render partial: 'components/carousel', locals: { photos: @flat.photos } %>
      </div>
    </div>
    <div class="col description-flat p-5">
      <p><b>Address : </b><%= @flat.full_address %></p>
      <p><b>Description : </b><%= @flat.description %></p>
      <% if @mean_rating.round == 1 %>
        <p><b>Rating : </b><i class="fa-solid fa-star"></i></p>
        <% elsif @mean_rating.round == 2 %>
        <p><b>Rating : </b><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i></p>
        <% elsif @mean_rating.round == 3 %>
        <p><b>Rating : </b><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i></p>
        <% elsif @mean_rating.round == 4 %>
        <p><b>Rating : </b><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i></p>
        <% elsif @mean_rating.round == 5 %>
        <p><b>Rating : </b><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i></p>
      <% end %>
      <p><b>Price : </b><%= @flat.price %> â‚¬</p>
      <%= link_to "Reserver",  new_flat_booking_path(@flat), class: 'btn btn-flat' %>
    </div>
  </div>
<div >
<div class="row bg-white p-3 mt-4">
  <h3>Reviews :</h3>
  <div class="d-flex flex-wrap justify-content-around">
    <% if @reviews %>
      <% @reviews.each do |review| %>
        <%= render partial: 'components/card_flat_comment', locals: { review: review } %>
      <% end%>
    <% end %>
  </div>
</div>
  <div class="d-flex justify-content-between border-top mb-1">
        <%= link_to "Back", flats_path, class: "btn-flat align-self-end" %>
    </div>
</div>
</div>
</div>
