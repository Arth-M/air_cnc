<div class="container">
  <div class="inner-container shadow">
    <div class="d-flex justify-content-between mx-5 mt-3">
      <div class="col-8" id="user-info">
        <h1 >Your Dashboard</h1>
        <%= render '/components/description_user' %>
      </div>
      <div class="col-4 update-position">
        <%= link_to "Update profile", edit_user_registration_path, class: "btn-flat align-self-baseline" %>
      </div>
    </div>

    <div class="d-flex justify-content-around m-5" id="bookings-and-flats">
      <div class="col-5" id="bookings">
        <h2>My bookings</h2>
        <div class="mt-3">
          <% @bookings.each do |booking| %>
            <div class="card-flat p-3">
              <p>start date: <%= booking.start_date %></p>
              <p class="mb-2">end date: <%= booking.end_date %></p>
              <%= link_to 'Review', new_booking_flat_review_path(booking), class: "btn-flat" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="col-5" id="flats">
        <div class="d-flex justify-content-between">
          <h2 style="margin-bottom: 8px;">My flats</h2>
          <%= link_to 'Add a flat', new_flat_path, class: "btn-flat" %>
        </div>
        <div class="mt-3">
          <%# si (il a un booking ET que j'ai laissÃ© une review) OU (il n'a pas de booking) %>
          <%= render '/components/card_flat_horizontal', partial: @flats %>
          <%# Sinon on affiche avec un bouton review %>
          <%# <%= link_to 'add a Review to the tenant', new_user_user_review_path(flat.user_id) %>
        </div>
      </div>
    </div>
  </div>
</div>
